@model IEnumerable<DAL.DBEntities.User>

@{
    ViewBag.Title = "list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="row form-group">
            <div class="col-8">
                <h4 class="card-title">Customers</h4>
            </div>
            <div class="col-4 text-right">
                <a href="~/customers/add" class="btn btn-sm btn-secondary"><i class="mdi mdi-plus-circle"></i> Add</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table id="order-listing1" class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Company Code</th>
                                <th>User Name</th>
                                <th>Email</th>
                                @*<th>Password</th>*@
                                <th>Company Name</th>
                                <th>Sms Service</th>
                                <th>Contact</th>
                                @*<th>Address</th>*@
                                    <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DAL.DBEntities.User item in Model)
                            {
                                <tr>
                                    <td> @item.UserID</td>
                                    <td> @item.CompanyCode</td>
                                    <td> @item.FirstName  &nbsp; @item.LastName</td>
                                    <td> @item.Email</td>
                                    @*<td> @item.Password</td>*@
                                    <td> @item.Company</td>
                                    @if (item.IsSMSCheckoutAddOn == true)
                                    {
                                        <td class="bg-success">Active</td>
                                    }
                                    else
                                    {
                                        <td class="bg-danger"> De Active</td>

                                    }
                                    <td> @item.ContactNo</td>
                                    @*<td> @item.StatusID</td>*@
                                    <td>
                                            <label class="badge badge-info">
                                                @if (item.StatusID == 1)
                                                {
                                                <b>Active</b>
                                                }
                                                else
                                                {
                                                <b>Deactive</b>
                                                }
                                             @*@{ item.StatusID == 1 ? "Active" : "DeActive"};*@
                                            </label>
                                        </td>
                                    <td class="text-center">
                                        <a href="~/customers/add?id=@item.UserID"><i class="mdi mdi-pencil style="font-size:20px"></i></a>
                                        <a href="~/customers/Delete?id=@item.UserID"><i class="mdi mdi-delete"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#order-listing1').DataTable();
    });

    function Delete(_id)
    {
        $.post("@Url.Action("Delete", "Customers")", { id: _id}, function (data) {
                if (data.success) {

                    alert("Deleted Successfully");
                }
            });
    }
</script>
